<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
      <h1>Premium Account</h1>
      <p>Sign up for the premium account for $10/mont and get access to the community and contact information!</p>
    <% else %>
      <h1>Basic Account</h1>
      <p>Sign up for free and get basic access to the community.</p>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      <!-- removed and moved as Partials -->

      <% if params[:plan] == "2" %>
        <%= render "pro_form" %> <!-- named as _basic_form.html.erb -->
      <% else %>
        <%= render "basic_form" %>
      <% end %>


      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>